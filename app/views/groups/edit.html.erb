<div class="container">
  <div class="row">
    <div class="offset-3 mx-auto"> <!--div要素の中身を中央揃えに-->
      <h1>Editing Group</h1>
      <%= form_with model: @group, local: true do |f| %>
        <div class="form-group">
          <label>グループ名</label>
          <%= f.text_field :name, class: "form-control", size: "50" %>
        </div>
        <div class="form-group">
          <label>紹介文</label>
          <%= f.text_area :introduction, class: "form-control", size: "50" %>
        </div>
        <div class="form-group">
          <label>グループ画像</label>
          <%= f.file_field :image_id, class: "form-control-file", accept: 'image/*' %>
        </div>
        <div class="form-group">
          <%= f.submit "Update Group", class: "btn btn-info" %>
        </div>
      <% end %>
    </div>
  </div>
</div>